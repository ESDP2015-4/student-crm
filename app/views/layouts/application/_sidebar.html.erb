<% if current_user %>
    <% if admin? %>
        <%= render 'layouts/application/admin_menu' %>
    <% elsif teacher? %>
        <%= render 'layouts/application/teacher_menu' %>
    <% elsif techsupport? %>
        <%= render 'layouts/application/techsupport_menu' %>
    <% elsif student? %>
        <%= render 'layouts/application/student_menu' %>
    <% else %>
        <%= render 'layouts/application/manager_menu' %>
    <% end %>
<% else %>
    <%= render 'layouts/application/guest_menu' %>
<% end %>