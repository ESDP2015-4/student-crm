<% if @course_element.readings.exists?(file_id: "#{file.id}") %>
    <button type="button" class="btn btn-sm btn-info" disabled="disabled">Добавить</button>
<% else %>
    <%= form_for Reading.new, :url => { :action => 'create_readings' } do |form| %>
        <%= form.hidden_field :file_id, :value => file.id %>
        <%= form.hidden_field :title, :value => file.title %>
        <%= form.hidden_field :icon_link, :value => file.icon_link %>
        <%= form.hidden_field :alternate_link, :value => file.alternate_link %>
        <%= form.hidden_field :course_element_id, :value => @course_element.id %>
        <%= form.submit 'Добавить', class: 'btn btn-info btn-sm' %>
    <% end %>
<% end %>