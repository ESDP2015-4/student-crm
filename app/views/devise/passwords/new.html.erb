<% @body_id = 'login_page' %>

<div id="login">
  <h1>
    <%= image_tag('logo.png')%>
  </h1>

  <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, id:'login_form' }) do |f| %>
      <h4>Забыли пароль?</h4>
      <%= f.error_notification %>

      <div class="form-inputs">
        <%= f.input :email, required: true, autofocus: true %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Отправить инструкции", class:'btn btn-primary'%>
      </div>
  <% end %>

  <%= render "devise/shared/links" %>
  <br/>
  <%= link_to '← На домашнюю страницу', root_url %>
</div>

