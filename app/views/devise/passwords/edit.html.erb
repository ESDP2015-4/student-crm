<% @body_id = 'login_page' %>

<div id="login">
  <h1>
    <%= image_tag('logo.png') %>
  </h1>

  <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: {id:'login_form', method: :put}) do |f| %>
      <h4>Новый пароль</h4>

      <%= f.error_notification %>

      <%= f.input :reset_password_token, as: :hidden %>
      <%= f.full_error :reset_password_token %>

      <div class="form-inputs">
        <%= f.input :password, label: "Новый пароль", required: true, autofocus: true, hint: ("Минимум #{@minimum_password_length} символов" if @minimum_password_length) %>
        <%= f.input :password_confirmation, label: "Подтвердить", required: true %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Задать новый пароль" %>
      </div>
  <% end %>

  <%= render "devise/shared/links" %>

</div>