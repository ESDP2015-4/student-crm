<% @body_id = 'login_page' %>

<div id="login">
  <h1>
    <%= image_tag('logo.png')%>
  </h1>
  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html:{id:'login_form'}) do |f| %>
      <div class="form-inputs">
        <%= f.input :email, label:'Эл. почта', required: false, autofocus: true %>
        <%= f.input :password,label:'Пароль',  required: false %>
        <%= f.input :remember_me,label:'Запомнить меня',  as: :boolean if devise_mapping.rememberable? %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Войти", class:'btn btn-primary' %>
      </div>
  <% end %>

  <%= render "devise/shared/links" %>
  <br/>
  <%= link_to '← На домашнюю страницу', root_url %>
</div>

