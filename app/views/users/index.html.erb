<h1> Все пользователи </h1>

<div class="digg_pagination" style="margin:auto">
  <%= will_paginate @microposts %>
</div>

<table class="table table-condensed">
  <tr>
    <th>Фото</th>
    <th>Пользователь</th>
    <th>Роли</th>
    <th>Действия</th>
  </tr>

  <% @users.each do |user| %>
      <tr>
        <td><%= image_tag user.image.url(:thumb), class: 'img-circle img-responsive' %></td>
        <td><%= user.name %> <%= user.surname %> <%= user.middlename %></td>
        <td>
          <% user.roles.each do |role| %>
            <span><%= role.name %></span>
          <% end %>
        </td>

        <td><%= link_to 'Просмотреть', user_path(user) %>
          <%= link_to 'Редактировать', edit_user_path(user) %>
        </td>
      </tr>
  <% end %>

</table>