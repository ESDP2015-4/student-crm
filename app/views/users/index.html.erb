<h3> Все пользователи </h3>

<div class="digg_pagination" style="margin:auto">
  <%= will_paginate @users %>
</div>

<div class="row">
  <%= link_to 'Отображение фотографий',
              "javascript:hideshow(document.getElementsByClassName('photo'))",
              class: 'btn btn-primary' %>
  <%= link_to 'Добавить пользователя', new_user_path, class:'btn btn-primary' %>
</div>


<table class="table table-condensed">
  <tr>
    <th class="photo">Фото</th>
    <th>Пользователь</th>
    <th>Роли</th>
    <th>Действия</th>
  </tr>

  <% @users.each do |user| %>
      <tr>
        <td class="photo">
          <%= link_to (image_tag user.image.url(:thumb), class: 'img-circle img-responsive'),
                      user_path(user) %>
        </td>
        <td><%= link_to user.full_name, user_path(user) %></td>
        <td>
          <% user.roles.each do |role| %>
              <p><%= role.name %></p>
          <% end %>
        </td>

        <td><%= link_to 'Просмотреть', user_path(user), class: 'btn btn-info' %>
          <%= link_to 'Редактировать', edit_user_path(user), class: 'btn btn-warning' %>
        </td>
      </tr>
  <% end %>
</table>

