<h1> All users </h1>

<div class="row">
  <div class="col-sm-12 products-pagination">
    <%= will_paginate @users %>
  </div>
</div>


<table class="table table-condensed">
  <tr>
    <th>Photo</th>
    <th>User</th>
    <th>User roles</th>
    <th>Actions</th>
  </tr>

  <% @users.each do |user| %>
  <tr>
    <td><%= image_tag user.image.url(:thumb), class: 'img-circle img-responsive' %></td>
    <td><%= user.name %> <%= user.surname %> <%= user.middlename %></td>
    <td> Daniar please add role </td>
    <td><%= link_to 'Show', user_path(user) %>
        <%= link_to 'edit', edit_user_path(user) %>
    </td>
  </tr>
  <% end %>

</table>