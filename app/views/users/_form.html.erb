
<%= form_for @user, html: {class: 'form-horizontal'} do |f| %>

    <div class="form-group <%= 'has-error' if @user.errors[:email].any? %>">
      <%= f.label :email, class: 'col-sm-2 control-label' %>
      <div class="col-sm-10">
        <%= f.text_field :email, class: 'form-control' %>
        <%= render 'shared/field_errors', object: @user, field_name: :email %>
      </div>
    </div>

    <div class="form-group <%= 'has-error' if @user.errors[:name].any? %>">
      <%= f.label :name, class: 'col-sm-2 control-label' %>
      <div class="col-sm-10">
        <%= f.text_field :name, class: 'form-control' %>
        <%= render 'shared/field_errors', object: @user, field_name: :name %>
      </div>
    </div>

    <div class="form-group <%= 'has-error' if @user.errors[:surname].any? %>">
      <%= f.label :surname, class: 'col-sm-2 control-label' %>
      <div class="col-sm-10">
        <%= f.text_field :surname, class: 'form-control' %>
        <%= render 'shared/field_errors', object: @user, field_name: :surname %>
      </div>
    </div>

    <div class="form-group <%= 'has-error' if @user.errors[:middlename].any? %>">
      <%= f.label :middlename, class: 'col-sm-2 control-label' %>
      <div class="col-sm-10">
        <%= f.text_field :middlename, class: 'form-control' %>
        <%= render 'shared/field_errors', object: @user, field_name: :middlename %>
      </div>
    </div>

    <div class="form-group <%= 'has-error' if @user.errors[:gender].any? %>">
      <%= f.label :gender, class: 'col-sm-2 control-label' %>

      <div class="col-sm-10">
        <%= f.radio_button :gender, 'male', class: 'checkbox-inline' %>
        <%= f.label :gender, 'male', value: 'male', class: 'checkbox-inline' %>

        <%= f.radio_button :gender, 'female', class: 'checkbox-inline' %>
        <%= f.label :gender, 'female', value: 'female', class: 'checkbox-inline' %>

        <%= render 'shared/field_errors', object: @user, field_name: :gender %>
      </div>
    </div>

    <div class="form-group <%= 'has-error' if @user.errors[:birthdate].any? %>">
      <%= f.label :birthdate, class: 'col-sm-2 control-label' %>
      <div class="col-sm-10">
        <%= f.date_select :birthdate,
                          order: [:day, :month, :year],
                          start_year: 1930,
                          class: 'form-control' %>
        <%= render 'shared/field_errors', object: @user, field_name: :birthdate %>
      </div>
    </div>

    <div class="form-group <%= 'has-error' if @user.errors[:phone1].any? %>">
      <%= f.label :phone1, class: 'col-sm-2 control-label' %>
      <div class="col-sm-10">
        <%= f.text_field :phone1, class: 'form-control' %>
        <%= render 'shared/field_errors', object: @user, field_name: :phone1 %>
      </div>
    </div>

    <div class="form-group <%= 'has-error' if @user.errors[:phone2].any? %>">
      <%= f.label :phone2, class: 'col-sm-2 control-label' %>
      <div class="col-sm-10">
        <%= f.text_field :phone2, class: 'form-control' %>
        <%= render 'shared/field_errors', object: @user, field_name: :phone2 %>
      </div>
    </div>

    <div class="form-group <%= 'has-error' if @user.errors[:skype].any? %>">
      <%= f.label :skype, class: 'col-sm-2 control-label' %>
      <div class="col-sm-10">
        <%= f.text_field :skype, class: 'form-control' %>
        <%= render 'shared/field_errors', object: @user, field_name: :skype %>
      </div>
    </div>

    <div class="form-group <%= 'has-error' if @user.errors[:passportdetails].any? %>">
      <%= f.label :passportdetails, 'Passport details', class: 'col-sm-2 control-label' %>
      <div class="col-sm-10">
        <%= f.text_field :passportdetails, class: 'form-control' %>
        <%= render 'shared/field_errors', object: @user, field_name: :passportdetails %>
      </div>
    </div>

    <div class="form-group <%= 'has-error' if @user.errors[:image].any? %>">
      <%= f.label :image, class: 'col-sm-2 control-label' %>
      <div class="col-sm-10">
        <%= f.file_field :image %>
        <%= render 'shared/field_errors', object: @user, field_name: :image %>
      </div>
    </div>



    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <%= f.submit 'Create user', class: 'btn btn-primary' %>
      </div>
    </div>
<% end %>