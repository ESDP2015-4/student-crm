<h3>Пользователи с ролью "<%= @role.name %>"</h3>


<%= form_tag users_role_filter_path, :method => 'get', id: 'users_search' do %>
    <%= hidden_field_tag :direction, params[:direction] %>
    <%= hidden_field_tag :sort, params[:sort] %>

    <div class="row" id="search-field">
      <div class="col-md-4">
        <%= text_field_tag :search, params[:search], class:'form-control' %>
      </div>
      <div class="col-md-offset-4">
        <%= submit_tag "Поиск", :name => nil, class:'btn btn-default' %>
      </div>
    </div>

    <div id="users">
      <%= render 'filter_roles', role_name: @role.name %>
    </div>

<% end %>

