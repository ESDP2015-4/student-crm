<% if current_user.has_any_role? :admin, :manager %>
    <%= simple_form_for([@course, @period], html: {class: 'form-horizontal'},
                        wrapper: :horizontal_form,
                        wrapper_mappings: {
                            file: :horizontal_file_input,
                            boolean: :horizontal_boolean
                        }) do |f| %>

        <div class="row">
          <div class="col-md-6 col-xs-12">

            <%= f.input :title, label: 'Название',
                        input_html: {style: 'width:200px;'} %>

            <%= f.input :course_element_id, label: 'Тема',
                        collection: CourseElement.where(course_id: @course),
                        label_method: :theme, value_method: :id,
                        input_html: {style: 'width:200px;'},
                        include_blank: false %>

            <%= f.input :group_id, label: 'Группа',
                        collection: Group.where(course_id: @course),
                        label_method: :name, value_method: :id,
                        input_html: {style: 'width:200px;'},
                        include_blank: false %>


            <%= f.input :commence_datetime, label: 'Дата начало',
                        start_year: DateTime.now.year + 1,
                        end_year: DateTime.now.year,
                        order: [:day, :month, :year],
                        include_blank: false %>

            <%= f.hidden_field :course_id, value: @course.id %>

          </div>

        </div>
        <hr>
        <div class="row">
          <div class="col-md-1 col-md-offset-1">
            <%= f.button :submit, 'Сохранить', class: 'btn btn-success' %>
          </div>
        </div>

    <% end %>

<% end %>



