<% if admin? or manager? %>
    <%= simple_form_for @group do |f| %>

        <% if @group.errors.any? %>
            <div class="errors">
              Total errors: <%= @group.errors.count %>
              <ul>
                <% @group.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                <% end %>
              </ul>
            </div>
        <% end %>
        <br/>
        <div>
          <%= f.input :name, label: 'Название группы', class: 'form-control',
                      placeholder: 'Введите название группы', input_html: {style: 'width:300px;'} %>
        </div>
        <div>
          <%= f.input :course_id, label: 'Курс',
                      collection: Course.all,
                      input_html: {style: 'width:300px'}, class: 'form-control' %>
        </div>
        <hr>
        <div>
          <%= f.button :submit, 'Создать группу', class: 'btn btn-success' %>
        </div>
    <% end %>
<% end %>
