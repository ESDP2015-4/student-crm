<h3>Список всех групп</h3>
<%= link_to 'Добавить новую группу', new_course_group_path(@course), class: 'btn btn-primary' %>
<br/>
<br/>

<table class="table table-striped">
  <tr>
    <th>Группа:</th>
    <th>Курс:</th>
    <th>Количество студентов:</th>
    <th>Действия</th>
  </tr>

  <% @groups.each do |group| %>
      <tr>
        <td><%= link_to group.name, course_group_path(@course, group) %></td>
        <td><%= link_to group.course.name, course_path(group.course_id) %></td>
        <td><%= group.students.count %></td>
        <td>
          <%= link_to 'Добавить студентов', new_course_group_group_membership_path(@course, group), class: 'btn btn-primary' %>
          <%= link_to 'Просмотр', course_group_path(@course, group), class: 'btn btn-info' %>
          <%= link_to 'Редактировать', edit_course_group_path(@course, group), class: 'btn btn-warning' %>
        </td>
      </tr>
  <% end %>
</table>
