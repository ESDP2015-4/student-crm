<ol class="breadcrumb">
  <li><a href="/groups/">Группы</a></li>
  <li class="active">Просмотр группы</li>
</ol>

<h1>Группа <%= @group.name %></h1>
<%= link_to 'Редактировать', edit_group_path, class: 'btn btn-default' %>
<%= link_to 'Добавить студентов', new_group_group_membership_path(@group.id), class: 'btn btn-primary' %>
<%= link_to 'Календарь занятий', group_periods_calendar_group_path(@group), class: 'btn btn-default' %>

<h3>Курс: <%= @group.course.name %></h3>
<br/>
<h4>Студенты группы:</h4>

<table class="table table-hover">
  <thead>
  <tr>
    <th>Студент</th>
    <th>Email</th>
    <th>Действия</th>
  </tr>
  </thead>
  <tbody>
  <% if @students %>
      <% @students.each do |student| %>
          <tr>
            <td><%= link_to student.full_name, user_path(student) %></td>
            <td><%= student.email %></td>
            <td></td>
          </tr>
      <% end %>
  <% end %>
  </tbody>
</table>
