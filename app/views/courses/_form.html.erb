<%= simple_form_for @course do |f| %>

    <% if @course.errors.any? %>
        <div class="errors">
          Total errors: <%= @course.errors.count %>
          <ul>
            <% @course.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <div>
      <%= f.input :name, label: 'Название курса', placeholder: 'Название курса',
                  input_html: {style: 'width:300px;'} %>
    </div>
    <hr>

    <div>
      <%= f.button :submit, 'Создать курс', class: 'btn btn-success' %>
    </div>
<% end %>
